@model IEnumerable<Asp26.Models.Cliente>
@{
    ViewData["Subtitle"] = "Clientes registrados";
}

<div class="row">
    <div class="col-6">
        <h2 class="Titulo">@ViewBag.Subtitle</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Home" asp-action="Adicionar_Clientes" class="btn btn-primary">Adicionar clientes...</a>
    </div>
</div>

<!-- apresentacao dos dados dos clientes -->
@if (Model.Count() == 0)
{
    <p>Não existem clientes registrados.</p>
}
else
{
    <!-- apresentar a tabela com os clientes registrados -->
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Nome:</th>
                <th>Telefone:</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Telefone</td>
                    <td class="text-right">
                        <a asp-controller="Home" asp-action="Editar_Cliente" asp-route-id="@cliente.id" class="btn btn-primary"><i class="fa fa-pencil"></i>Editar</a>
                        <a asp-controller="Home" asp-action="Eliminar_Cliente" asp-route-id="@cliente.id" class="btn btn-primary"><i class="fa fa-pencil"></i>Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>Total: <b>@Model.Count()</b></p>
}

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
